{
	"type": "module",
	"name": "spritesheet-viewer",
	"version": "1.0.1",
	"description": "Spritesheet viewer for GrafX2",
	"main": "./src/main/main.js",
	"scripts": {
		"dev": "electron . & npm run watch",
		"view": "npm run build && electron .",
		"build": "node esbuild.build.js",
		"watch": "node esbuild.watch.js",
		"pack": "npm run build && electron-builder",
		"debug:main": "electron --inspect-brk . & npm run watch",
		"lint": "npx eslint 'src/**/*.js' --cache --max-warnings 0",
		"lint:fix": "npm run lint -- --fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/smiley405/spritesheet-viewer.git"
	},
	"author": "smiley405",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/smiley405/spritesheet-viewer/issues"
	},
	"homepage": "https://github.com/smiley405/spritesheet-viewer#readme",
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@tweakpane/core": "^2.0.5",
		"electron": "^38.1.2",
		"electron-builder": "^26.0.12",
		"esbuild": "0.25.10",
		"eslint": "^9.36.0",
		"eslint-import-resolver-node": "^0.3.9",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^60.0.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-unused-imports": "^4.2.0",
		"globals": "^16.4.0"
	},
	"dependencies": {
		"@panzoom/panzoom": "^4.6.0",
		"@stdlib/fs-read-file": "^0.2.2",
		"base64-img": "^1.0.4",
		"chokidar": "^4.0.3",
		"drag-and-drop-files": "^0.0.1",
		"eventemitter3": "^5.0.1",
		"execa": "^9.6.0",
		"file-saver": "^2.0.5",
		"fs-extra": "^11.3.2",
		"glob": "^11.0.3",
		"mime": "^4.1.0",
		"spritesmith": "^3.5.1",
		"tweakpane": "^4.0.5"
	},
	"build": {
		"appId": "com.grafx2.spritesheetviewer",
		"productName": "Spritesheet Viewer",
		"icon": "build/icons/icon",
		"win": {
			"target": ["zip"],
			"icon": "build/icons/icon.ico",
			"artifactName": "${productName}-v${version}-win.zip"
		},
		"linux": {
			"target": ["AppImage", "zip"],
			"icon": "build/icons/icon.png",
			"artifactName": "${productName}-v${version}-linux.${ext}"
		  }
	}
}
